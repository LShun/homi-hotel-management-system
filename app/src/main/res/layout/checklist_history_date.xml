<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/txt_date_checklist_His"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:shadowColor="@color/hintTextColor"
        android:text="@string/date_filter"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:textColor="@color/hintTextColor"
        app:elevation="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/filter_date_btn"
        android:layout_width="@dimen/serach_icon"
        android:layout_height="@dimen/serach_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toEndOf="@+id/txt_date_checklist_His"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/searchwhite" />

</androidx.constraintlayout.widget.ConstraintLayout>