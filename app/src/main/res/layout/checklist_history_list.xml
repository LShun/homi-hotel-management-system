<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="10dp"
    card_view:contentPadding="12dp">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:justifyContent="flex_start">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="10dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/room_Image_Checklist"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            app:flexDirection="column"
            app:flexWrap="wrap"
            app:justifyContent="flex_start">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start">

                <TextView
                    android:id="@+id/txt_checklist_roomNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="SR1001" />

                <TextView
                    android:id="@+id/txt_checklist_roomType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Single Room" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start">

                <TextView
                    android:id="@+id/txt_checklist_His_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="22/5/2021" />

                <TextView
                    android:id="@+id/txt_checklist_His_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="16:20:15" />
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:id="@+id/txt_checklist_housekeeper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Body1"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="None" />
        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>
</androidx.cardview.widget.CardView>